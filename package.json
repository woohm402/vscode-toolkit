{
  "name": "woohm402-vscode-toolkit",
  "displayName": "woohm402-vscode-toolkit",
  "description": "woohm402's vscode toolkit",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/woohm402/vscode-toolkit.git"
  },
  "publisher": "woohm402",
  "license": "MIT",
  "contributes": {
    "commands": [
      {
        "command": "createComponent",
        "title": "New React Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "createComponent",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "deploy": "vsce publish --yarn",
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "1.90.0",
    "@vscode/test-cli": "0.0.9",
    "@vscode/test-electron": "2.4.0",
    "@vscode/vsce": "2.27.0",
    "@woohm402/eslint-config-base": "0.1.0",
    "esbuild": "0.21.4",
    "eslint": "9.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.2",
    "typescript": "5.4.5"
  }
}
